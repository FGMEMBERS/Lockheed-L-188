<?xml version="1.0" ?>
<!--
    This is the ki266 3d instrument.
    Modeled after King KI266 DME Indicator

    This instrument needs the file
    Aircraft/Instruments-3d/ki266/ki266.nas
    to be included in your -set.xml nasal section
    like this:

    <nasal>
      <YourAircraft>
        <file>Aircraft/Instruments-3d/ki266/ki266.nas</file>
      </YourAircraft>
    </nasal>

    and at least one instance of the ki266 class to be created
    in your aircraft nasal code like this:
    ki266.new(0); # for your first dme at /instrumentation/dme[0]
    ki266.new(1); # if you have another at /instrumentation/dme[1]
    Maintainer: Torsten Dreyer
-->
<PropertyList>
  <params>
    <power-btn>/instrumentation/aglradar/power-btn</power-btn>
    <meter-ft>/instrumentation/aglradar/switch-meter-ft</meter-ft>
    <feet-display>/position/gear-agl-ft</feet-display>
    <meter-display>/position/gear-agl-m</meter-display>
    <electrical>/controls/lighting/panel-norm</electrical>
    <dimming>/instrumentation/dme[0]/dimming-norm</dimming>
    <electrical>systems/electrical/outputs/dme</electrical>
  </params>

  <path>agl-radar.ac</path>

  <!-- turn it off, when u/s or switched off -->
  <animation>
    <type>select</type>
    <object-name>Indicators</object-name>
    <condition>
      <and>
        <property alias="../../../../params/power-btn"/>
        <property alias="../../../../params/electrical"/>
      </and>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ModeSwitch</object-name>
    <object-name>PowerBtn</object-name>
    <object-name>Meter</object-name>
    <object-name>Feet</object-name>
    <object-name>AGL</object-name>
    <emission>
        <red>0.8</red>
        <green>0.5</green>
        <blue>0.3</blue>
        <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Frame</object-name>
    <emission>
      <red>0.1</red>
      <green>0.02</green>
      <blue>0.00001</blue>
      <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Indicators</object-name>
    <emission>
      <red>-1.0</red>
      <green>-1.0</green>
      <blue>-1.0</blue>
      <factor-prop alias="../../../params/dimming"/>
      <offset>1</offset>
    </emission>
  </animation>

  <!-- the power button -->

  <animation>
    <type>translate</type>
    <object-name>PowerBtn</object-name>
    <factor>-0.003</factor>
    <property alias="../../params/power-btn"/>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>PowerBtn</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property alias="../../../../params/power-btn"/>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/sim/sound/switch2</property>
      </binding>
    </action>
  </animation>

  <!-- the mode switch do display min/kts -->
  <animation>
    <type>select</type>
    <object-name>Meter</object-name>
    <object-name>Right</object-name>
    <condition>
      <not>
        <property alias="../../../../params/meter-ft"/>
      </not>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>Feet</object-name>
    <object-name>Left</object-name>
    <condition>
      <property alias="../../../params/meter-ft"/>
    </condition>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>ModeSwitch</object-name>
    <factor>-0.003</factor>
    <property alias="../../params/meter-ft"/>
    <axis>
      <x>1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>ModeSwitch</object-name>
    <object-name>Feet</object-name>
    <object-name>Meter</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property alias="../../../../params/meter-ft"/>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/sim/sound/switch2</property>
      </binding>
    </action>
  </animation>

  <!-- Feet - display -->

  <!-- blank leading zeros -->
  <animation>
    <name>ft_10000_blank</name>
    <type>select</type>
    <object-name>Left.10000</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/feet-display"/>
        <value>10000.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>ft_1000_blank</name>
    <type>select</type>
    <object-name>Left.1000</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/feet-display"/>
        <value>1000.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>ft_100_blank</name>
    <type>select</type>
    <object-name>Left.100</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/feet-display"/>
        <value>100.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>ft_10_blank</name>
    <type>select</type>
    <object-name>Left.10</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/feet-display"/>
        <value>10.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>ft_1_blank</name>
    <type>select</type>
    <object-name>Left.1</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/feet-display"/>
        <value>1.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <!-- left display, left digit -->
  <animation>
    <name>ft_10000_lo</name>
    <type>textranslate</type>
    <object-name>Left.10000</object-name>
    <property alias="../../params/feet-display"/>
    <step>10000</step>
    <factor>0.00001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>ft_1000_lo</name>
    <type>textranslate</type>
    <object-name>Left.1000</object-name>
    <property alias="../../params/feet-display"/>
    <step>1000</step>
    <factor>0.0001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>ft_100_lo</name>
    <type>textranslate</type>
    <object-name>Left.100</object-name>
    <property alias="../../params/feet-display"/>
    <step>100</step>
    <factor>0.001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>ft_10_lo</name>
    <type>textranslate</type>
    <object-name>Left.10</object-name>
    <property alias="../../params/feet-display"/>
    <step>10</step>
    <factor>0.01</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>ft_1_lo</name>
    <type>textranslate</type>
    <object-name>Left.1</object-name>
    <property alias="../../params/feet-display"/>
    <step>1</step>
    <factor>0.1</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- Meter display -->

  <!-- blank leading zeros -->
  <animation>
    <name>m_10000_blank</name>
    <type>select</type>
    <object-name>Right.10000</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/meter-display"/>
        <value>10000.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>m_1000_blank</name>
    <type>select</type>
    <object-name>Right.1000</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/meter-display"/>
        <value>1000.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>m_100_blank</name>
    <type>select</type>
    <object-name>Right.100</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/meter-display"/>
        <value>100.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>m_10_blank</name>
    <type>select</type>
    <object-name>Right.10</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/meter-display"/>
        <value>10.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>m_1_blank</name>
    <type>select</type>
    <object-name>Right.1</object-name>
    <condition>
      <greater-than-equals>
        <property alias="../../../../params/meter-display"/>
        <value>1.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <!-- meter display, meter digit -->
  <animation>
    <name>m_10000_lo</name>
    <type>textranslate</type>
    <object-name>Right.10000</object-name>
    <property alias="../../params/meter-display"/>
    <step>10000</step>
    <factor>0.00001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>m_1000_lo</name>
    <type>textranslate</type>
    <object-name>Right.1000</object-name>
    <property alias="../../params/meter-display"/>
    <step>1000</step>
    <factor>0.0001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>m_100_lo</name>
    <type>textranslate</type>
    <object-name>Right.100</object-name>
    <property alias="../../params/meter-display"/>
    <step>100</step>
    <factor>0.001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>m_10_lo</name>
    <type>textranslate</type>
    <object-name>Right.10</object-name>
    <property alias="../../params/meter-display"/>
    <step>10</step>
    <factor>0.01</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>m_1_lo</name>
    <type>textranslate</type>
    <object-name>Right.1</object-name>
    <property alias="../../params/meter-display"/>
    <step>1</step>
    <factor>0.1</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList>
