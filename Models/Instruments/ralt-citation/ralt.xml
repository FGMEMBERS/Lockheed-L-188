<PropertyList>

<path>ralt.ac</path>

	<animation>
		<type>select</type>
		<object-name>DH.lamp</object-name>
		<condition>
			<less-than>
				<property>position/altitude-agl-ft</property>
				<property>instrumentation/altimeter/decision-height</property>
			</less-than>
			</condition>
		</animation>

	<animation>
		<type>select</type>
		<object-name>RALT.flag</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/bus-volts</property>
				<value>1</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>DH.bug</object-name>
		<property>instrumentation/altimeter/decision-height</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>0</dep></entry>
			<entry><ind>500</ind><dep>180.0</dep></entry>
			<entry><ind>1000</ind><dep>207.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>RALT.needle</object-name>
		<property>position/altitude-agl-ft</property>
		<interpolation>
			<entry><ind>-20</ind><dep>-7.5</dep></entry>
			<entry><ind>0.0</ind><dep>0</dep></entry>
			<entry><ind>500</ind><dep>180.0</dep></entry>
			<entry><ind>2500</ind><dep>290.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

<!-- hotspots-->

	<animation>
		<type>pick</type>
		<object-name>RALT.knob</object-name>
		<action>
			<button>0</button>
				<repeatable>true</repeatable>
				<interval-sec>0.2</interval-sec>
			 <binding>
				<condition>
					<less-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>500</value>
					</less-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>10</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
			 <binding>
				<condition>
					<greater-than>
						<property>instrumentation/altimeter/decision-height</property>
						<value>490</value>
					</greater-than>
				</condition>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/decision-height</property>
				<step>100</step>
				<min>0</min>
				<max>1000</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

