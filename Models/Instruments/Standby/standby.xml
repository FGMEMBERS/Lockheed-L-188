	<animation>
		<name>Text</name>
		<object-name>Mach</object-name>
		<object-name>ILS</object-name>
		<object-name>Altimeter pressure setting hpa</object-name>
		<object-name>Altimeter thousands counter</object-name>
		<object-name>Altimeter pressure setting</object-name>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>SpdTape</object-name>
		<property alias="../../params/indicated-speed-kt" />
		<factor>0.001344299</factor>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

	<animation>
		<type>texmultiple</type>
		<object-name>AI</object-name>
		<transform>
			<subtype>textranslate</subtype>
			<property alias="../../../params/indicated-pitch-deg" />
			<factor>0.00314</factor>
			<axis>
				<x>0</x>
				<y>1</y>
			</axis>
		</transform>
		<transform>
			<subtype>texrotate</subtype>
			<property alias="../../../params/indicated-roll-deg" />
			<axis>
				<x>0</x>
				<y>0</y>
				<z>-1</z>
			</axis>
			<center>
				<x>0.25</x>
				<y>0.5</y>
			</center>
		</transform>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>RollPtr</object-name>
		<property alias="../../params/indicated-roll-deg" />
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0.0551</z-m>
		</center>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>ILSPtr</object-name>
		<property>instrumentation/nav/heading-needle-deflection-norm</property>
		<factor>0.0115</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>GSPtr</object-name>
		<property>instrumentation/nav/gs-needle-deflection-norm</property>
		<factor>0.0115</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>AltTape</object-name>
		<property alias="../../params/indicated-altitude-ft" />
		<factor>0.001001519</factor>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>PlusBtn</object-name>
		<object-name>PlusBtnText</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/standby/brightness-norm</property>
				<step>0.05</step>
				<max>1</max>
			</binding>
		</action>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>MinusBtn</object-name>
		<object-name>MinusBtnText</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/standby/brightness-norm</property>
				<step>-0.05</step>
				<min>0</min>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>CageBtn</object-name>
		<object-name>CageBtnText</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-assign</command>
				<property alias="../../../../params/attitude-indicator-spin" />
				<value>1</value>
			</binding>
		</action>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>BaroKnob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/altimeter-setting-inhg" />
				<step>0.01</step>
				<max>33</max>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/altimeter-setting-inhg" />
				<step>-0.01</step>
				<min>26</min>
			</binding>
		</action>
	</animation>

	<!-- Lightmaps -->
	<effect>
		<inherits-from>Aircraft/L-188/Models/Effects/L-188lightmap</inherits-from>
		<parameters>
			<lightmap-factor-prop>sim/model/lights/panel-lightmap</lightmap-factor-prop>
			<lightmap-factor n="0">
				<use alias="../../lightmap-factor-prop" />
			</lightmap-factor>
			<lightmap-factor n="1">
				<use alias="../../lightmap-factor-prop" />
			</lightmap-factor>
			<lightmap-factor n="2">
				<use alias="../../lightmap-factor-prop" />
			</lightmap-factor>
			<texture n="3">
				<image>Aircraft/L-188/Models/Effects/Lightmaps/standby-lightmap.png</image>
			</texture>
		</parameters>
		<object-name>Bezel</object-name>
	</effect>
	
